<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    >


    <ImageButton
        android:id="@+id/playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/tiempo"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000"
        android:layout_above="@+id/linearLayout"
        android:layout_alignStart="@+id/nombre" />

    <TextView
        android:id="@+id/tiempofin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:layout_below="@+id/seekBar"
        android:layout_toEndOf="@+id/textView2" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:id="@+id/btnpv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.43"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageButton
        android:id="@+id/btnrw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.43"
        app:srcCompat="@android:drawable/ic_media_rew" />
    <ImageButton
        android:id="@+id/btnps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.43"
        app:srcCompat="@android:drawable/ic_media_pause" />
    <ImageButton
        android:id="@+id/btnff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.43"
        app:srcCompat="@android:drawable/ic_media_ff" />
    <ImageButton
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.43"
        app:srcCompat="@android:drawable/ic_media_next" />

</LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_below="@+id/seekBar"
        android:layout_toEndOf="@+id/tiempo" />

    <TextView

        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITULO DE LA CANCION"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fondo1"
        android:layout_marginBottom="64dp"
        android:layout_above="@+id/playlist"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_delete" />


</RelativeLayout>
